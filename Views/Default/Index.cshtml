@using Departman_Core.Models
@model List<Birim>

@{
	Layout = "~/Views/shared/_TestLayout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Birim</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var x in Model)
    {


        <tr>
            <td>@x.BirimId</td>
            <td>@x.BirimAd</td>
            <td><a href="/Default/BirimSil/@x.BirimId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Default/BirimGetir/@x.BirimId" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Default/BirimDetay/@x.BirimId" class="btn btn-secondary">Detaylar</a></td>


        </tr>
    }
</table>

<a href="/Default/YeniBirim/" class="btn btn-primary">Yeni Birim</a>

